<%= render 'shared/errors', obj: @invitation %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@invitation, url: event_invitations_path(event_id: @event.id), :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :email, class: "form-control", placeholder: "Email of user", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Send Invitation', class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to event", event_path(@event) %> ]
    </div>
  </div>
</div>