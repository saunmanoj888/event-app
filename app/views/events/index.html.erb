<h1 align="center">Listing all Events</h1>
<div align="right">
  <%= link_to "Add new event", new_event_path, class: "btn btn-xs btn-warning" %>
</div>
<div align="center">
  <%= will_paginate %>
</div>
<% @events.each do |event| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="event-title">
          <%= event.name %>
        </div>
        <div class=".event-description">
          <%= truncate(event.description, length: 100) %>
        </div>
        <% if signed_in? %>
          <div class="event-actions">
            <%= link_to "Edit this event", edit_event_path(event), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this event", event_path(event), method: :delete, 
                                          data: { confirm: "Are you sure you want to delete the event?"}, 
                                          class: "btn btn-xs btn-danger" %>
            <%= link_to "Show this event", event_path(event), class: "btn btn-xs btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
<div align="center">
  <%= will_paginate %>
</div>