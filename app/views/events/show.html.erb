<h2 align="center">Title: <%= @event.name %></h2>
<div align="right">
  <%= link_to "Invite User", new_event_invitation_path(event_id: @event.id), class: "btn btn-xs btn-warning" %>
</div>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@event.description) %>
  <div class="event-actions">
    <% if signed_in? %>
      <%= link_to "Edit this event", edit_event_path(@event), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this event", event_path(@event), method: :delete, 
                                        data: { confirm: "Are you sure you want to delete the event?"}, 
                                        class: "btn btn-xs btn-danger" %>
    <% end %>
    <%= link_to "View all events", events_path, class: "btn btn-xs btn-success" %>
  </div>
  <hr>
  <h4 class="center description">Invited Users:</h4>
  <% @event.reload.invitations.each do |invitation| %>
    <div class="well well-lg">
      <%= invitation.email %>
    </div>
  <% end %>
</div>